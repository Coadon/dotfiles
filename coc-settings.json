{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json"
            ],
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ]
        }
    },

    "diagnostic.errorSign": "x",
    "diagnostic.warningSign": "w",
    "diagnostic.infoSign": "i",
    "diagnostic.hintSign": "h",
    "diagnostic.floatConfig": {
        "border": true
    }
}
